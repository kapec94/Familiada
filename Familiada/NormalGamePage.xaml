      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" d:DesignWidth="460"
	Title="NormalGamePage" Loaded="Page_Loaded" Height="264">

    <Grid Name="WindowRoot">
